{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-document-read-recursive",
      "allow": [
        {
          "path": "$DOCUMENT/*"
        }
      ]
    },
    "store:default",
    "dialog:default"
  ]
}